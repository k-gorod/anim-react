{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "pretty": true,
        "strict": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": false,
        "rootDir": "src",
        "baseUrl": "src",
        "jsx": "react-jsx",
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2017.object",
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable",
            "esnext.array"
        ],
        "noErrorTruncation": true
    },
    "include": [
        "src"
    ],
    "types": [
        "react",
        "node"
    ],
    "exclude": [
        "node_modules",
        "public",
        "build",
        ".eslintrc.js",
        "src/components",
    ],
    "compileOnSave": false
}